{% extends "base.html.j2" %}
{% block content %}
    <h1>Reset Your Password</h1>
    <form action="" method="post" novalidate>
        {{ form.hidden_tag() }}
        <p>
            {{ form.email.label }}
            <br/>
            {{ form.email(size=64) }}
            <br/>
            {% for error in form.email.errors %}<span style="color: red;">[{{ error }}]</span>{% endfor %}
        </p>
        <p>{{ form.submit() }}</p>
    </form>
{% endblock %}
